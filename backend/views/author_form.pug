extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Full name' name='name' required value=(undefined===author ? '' : author.name))
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='Email address' name='email' required value=(undefined===author ? '' : author.email))
    div.form-group
      label(for='summary') Summary:
      textarea#summary.form-control(name='summary', placeholder='Summary about the author', required) 
        != (undefined===author ? '' : author.summary)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
